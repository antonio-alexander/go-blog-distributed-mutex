    "version": "0.2.0",
    "configurations": [
        {
            "name": "go-blog-distributed-mutex",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "cwd": "${workspaceRoot}/cmd",
            "program": "${workspaceRoot}/cmd/main.go",
            "env": {
                "MYSQL_HOST": "localhost",
                "MYSQL_PORT": "3306",
                "MYSQL_USERNAME": "root",
                "MYSQL_PASSWORD": "mysql",
                "MYSQL_DATABASE": "go_blog_distributed_mutex",
                "REDIS_HOSTNAME": "localhost",
                "REDIS_PORT": "6379",
                "REDIS_PASSWORD": "",
                "REDIS_DATABASE": "",
                "REDIS_TIMEOUT": "15",
                "RETRY_INTERVAL": "1",
                "MUTEX_TYPE": "redis",
                // "MUTEX_TYPE": "redshift",
                "MUTEX_EXPIRATION": "10",
            }
        }
    ]
}